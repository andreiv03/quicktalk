{
  "name": "server",
  "homepage": "https://quicktalk-andreiv03.herokuapp.com/",
  "private": true,
  "scripts": {
    "build": "tsc && cd client && npm run build",
    "start": "node dist/index.js",
    "server": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-prebuild": "cd client && NPM_CONFIG_PRODUCTION=false npm ci",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.1",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.30",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.16",
    "typescript": "4.5.5"
  }
}
